# Seiketsu AI FastAPI Backend Environment Configuration

# Application Environment
ENVIRONMENT=development
APP_NAME="Seiketsu AI API"
APP_VERSION="1.0.0"
PORT=8000
WORKERS=4

# Security
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DATABASE_URL=postgresql+asyncpg://seiketsu_user:seiketsu_pass@localhost/seiketsu_ai
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# Test Database (for running tests)
TEST_DATABASE_URL=postgresql+asyncpg://test_user:test_pass@localhost/seiketsu_test

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Voice Processing APIs
ELEVEN_LABS_API_KEY=your-elevenlabs-api-key
ELEVEN_LABS_BASE_URL=https://api.elevenlabs.io/v1
ELEVEN_LABS_TIMEOUT=30

OPENAI_API_KEY=your-openai-api-key

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://seiketsu.ai,https://app.seiketsu.ai

# Allowed Hosts
ALLOWED_HOSTS=localhost,127.0.0.1,seiketsu.ai,*.seiketsu.ai,api.seiketsu.ai

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_AUDIO_FORMATS=mp3,wav,m4a,ogg

# Webhook Configuration
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Email Configuration (for notifications)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@seiketsu.ai
EMAILS_FROM_NAME="Seiketsu AI"

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Production Settings (uncomment for production)
# ENVIRONMENT=production
# DEBUG=false
# CORS_ORIGINS=https://seiketsu.ai,https://app.seiketsu.ai
# ALLOWED_HOSTS=seiketsu.ai,*.seiketsu.ai,api.seiketsu.ai